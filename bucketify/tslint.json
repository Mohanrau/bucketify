{
    
    "rulesDirectory": [
      "tslint-plugin-prettier"
    ],
    "extends": [
      "tslint:latest",
      "tslint-config-prettier"
    ],
    "rules": {
      "prettier": [
        true, {
        "no-any": true,
        "curly": true,
        "quotemark": [true, "double"],
          "printWidth": 140,
          "tabWidth": 2,
          "useTabs": false,
          "semi": true,
          "singleQuote": true,
          "trailingComma": "all",
          "bracketSpacing": true,
          "arrowParens": "always"
        }
      ]
    }
  }